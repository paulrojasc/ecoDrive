<h2 class="mt-4 pt-4 mb-4">多Ha olvidado su contrase単a?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control mb-3' %>
  </div>

  <div class="actions">
    <%= f.submit "Solicitar cambio de contrase単a", class:'btn btn-success mt-2 mb-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

